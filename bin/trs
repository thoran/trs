#!/usr/bin/env ruby
# trs

# 20121009
# 0.8.0

# Changes since 0.6: 

require_relative '../lib/Switches'
require_relative '../lib/ToyRobotSimulator'

switches = Switches.new do |s|
  s.set(:p, :program_name)
  s.set(:d, :directory, :programs_directory)
  s.set(:t, :tabletop, :tabletop_dimensions)
end

trs = ToyRobotSimulator.new
trs.program_name = switches.program_name if switches.program_name
trs.programs_directory = switches.programs_directory if switches.programs_directory
trs.tabletop_dimensions = switches.tabletop_dimensions if switches.tabletop_dimensions
trs.setup
trs.run
